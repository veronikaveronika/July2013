- model_class = Parent
.page-header
  %h1=t '.title', :default => model_class.model_name.human(count: 2)
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:fio)
     
      
      %th= model_class.human_attribute_name(:phone)
      
      %th= model_class.human_attribute_name(:dob)
     
      %th= model_class.human_attribute_name(:desc)
      %th= model_class.human_attribute_name(:family_id)
      
      %th.span3=t '.actions', :default => t("helpers.actions")
  %tbody
    - @parents.each do |parent|

      %tr
        %td= link_to parent.id, parent_path(parent)
        %td= link_to parent.last_name+" "+parent.first_name+" "+parent.middle_name, parent_path(parent)
        
        
        %td= parent.phone
        
        %td= parent.dob
       
        %td= parent.desc
        %td= parent.family_id
        
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_parent_path(parent), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), parent_path(parent), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_parent_path, :class => 'btn btn-primary'
