= form_for @child, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :last_name, :class => 'control-label'
    .controls
      = f.text_field :last_name, :class => 'text_field'
  .control-group
    = f.label :middle_name, :class => 'control-label'
    .controls
      = f.text_field :middle_name, :class => 'text_field'
  .control-group
    = f.label :first_name, :class => 'control-label'
    .controls
      = f.text_field :first_name, :class => 'text_field'
  .control-group
    = f.label "Краткое имя", :class => 'control-label'
    .controls
      = f.text_field :short_name, :class => 'text_field'
  .control-group
    = f.label "Пол", :class => 'control-label'
    .controls
      = f.select :sex, [["Мужской", :m], ["Женский", :f]]
  .control-group
    = f.label "Дата Рождения", :class => 'control-label'
    .controls
      = f.text_field :dob, "data-behaviour" => "datepicker"
  .control-group
    = f.label "Документ", :class => 'control-label'
    .controls
      = f.text_field :doc, :class => 'text_field'
  .control-group
    = f.label "Номер документа", :class => 'control-label'
    .controls
      = f.text_field :doc_number, :class => 'text_field'
  .control-group
    = f.label "Дополнительная информация", :class => 'control-label'
    .controls
      = f.text_field :desc, :class => 'text_field'
  .control-group
    = f.label :family_id, :class => 'control-label'
    .controls
      = f.text_field :family_id, :class => 'text_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), children_path, :class => 'btn'
